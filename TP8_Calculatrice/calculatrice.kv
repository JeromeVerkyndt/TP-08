#:import App kivy.app.App

BoxLayout:
    orientation: 'vertical'
    Label:
        id: ecran
        text: ''
        font_size: 50
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '1'
            on_press: app.ajout('1')
        Button:
            text: '2'
            on_press: app.ajout('2')
        Button:
            text: '3'
            on_press: app.ajout('3')
        Button:
            text: '+'
            on_press: app.ajout('+')
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '4'
            on_press: app.ajout('4')
        Button:
            text: '5'
            on_press: app.ajout('5')
        Button:
            text: '6'
            on_press: app.ajout('6')
        Button:
            text: '-'
            on_press: app.ajout('-')
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '7'
            on_press: app.ajout('7')
        Button:
            text: '8'
            on_press: app.ajout('8')
        Button:
            text: '9'
            on_press: app.ajout('9')
        Button:
            text: 'X'
            on_press: app.ajout('*')
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'AC'
            on_press: app.efface()
        Button:
            text: '0'
            on_press: app.ajout('0')
        Button:
            text: '='
            on_press: app.calcul()
        Button:
            text: '/'
            on_press: app.ajout('/')
